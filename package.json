{
  "name": "valve",
  "version": "1.0.0",
  "description": "Part of the carto engine",
  "author": "Carto",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/jest": "^20.0.8",
    "@types/leaflet": "^1.2.0",
    "@types/mocha": "^2.2.43",
    "chai": "^4.1.2",
    "eslint": "^4.6.1",
    "jest": "^21.0.2",
    "mocha": "^3.5.3",
    "ts-jest": "^21.0.0",
    "ts-loader": "^2.3.7",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typedoc": "^0.8.0",
    "typescript": "^2.5.2",
    "webpack": "^3.5.6"
  },
  "scripts": {
    "build:watch": "webpack --watch",
    "build": "webpack",
    "doc": "typedoc --out doc src --excludePrivate --mode file --name carto.Valve",
    "lint:fix": "tslint --project . --fix",
    "lint": "tslint --project .",
    "test:mocha": "mocha --compilers ts:ts-node/register",
    "test:jest": "jest"
  },
  "main": "dist/valve.js",
  "jsnext": "es6/index.js",
  "dependencies": {
    "leaflet": "^1.2.0"
  },
  "jest": {
    "moduleFileExtensions": ["ts","js"],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.ts$"
  }
}
